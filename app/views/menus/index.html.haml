        %tr
          %td
            = Menu.find_by(id: item.menu_id).name
          %td
            = item.ingredient.name
          %td
            = item.amount
          %td
            = Unit.find_by(ingredient_id: item.ingredient.id).unit
          %td
            = link_to "#" do
              %button{type: "submit", class:'btn btn-outline-secondary btn-sm'}
